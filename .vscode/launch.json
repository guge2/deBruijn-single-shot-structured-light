{
    // ============================================
    // VSCode 调试配置 - 用于调试C++程序
    // ============================================
    // 调试(Debug)允许你在程序运行时暂停执行、查看变量值、逐行执行代码等
    
    "version": "0.2.0",
    "configurations": [
        {
            // 调试配置: GDB调试器
            // GDB是GNU调试器，用于调试C/C++程序
            "name": "Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            
            // 要调试的可执行文件路径
            // ${workspaceFolder} 是项目根目录的变量
            "program": "${workspaceFolder}/build/bin/demo_test",
            
            // 传递给程序的命令行参数（如果需要）
            "args": [],
            
            // 调试时的工作目录
            // 设置为build/bin，这样程序可以正确访问Data目录
            "cwd": "${workspaceFolder}/build/bin",
            
            // 是否在程序入口处停止
            "stopAtEntry": false,
            
            // 使用GDB作为调试器
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            
            // GDB启动时的配置命令
            "setupCommands": [
                {
                    "description": "启用GDB的pretty-printing功能",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "设置GDB打印格式为美化模式",
                    "text": "set print pretty on",
                    "ignoreFailures": true
                }
            ],
            
            // 调试前先编译项目
            // 这样可以确保调试的是最新编译的代码
            "preLaunchTask": "CMake: Build",
            
            // 调试器不使用外部控制台，而是使用VSCode的集成终端
            "externalConsole": false,
            
            // 指定源代码语言
            "sourceLanguages": ["cpp"]
        }
    ]
}